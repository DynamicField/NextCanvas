<Window x:Class="NextCanvas.Views.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NextCanvas.Views"
        x:Name="CurrentWindow"
        mc:Ignorable="d"
        Title="ProgressWindow" Height="200" Width="500" WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="73*"/>
            <RowDefinition Height="96*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding ProgressText, ElementName=CurrentWindow, FallbackValue=Loading...}" FontSize="20" VerticalAlignment="Center" TextWrapping="Wrap"/>
        <ProgressBar Grid.Row="1" Value="{Binding Progress, ElementName=CurrentWindow}" Margin="0,20"/>
    </Grid>
</Window>
